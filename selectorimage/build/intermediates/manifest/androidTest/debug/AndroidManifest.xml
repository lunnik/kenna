<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.odn.selectorimage.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <instrumentation
        android:name="android.support.test.runner.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.odn.selectorimage.test"
        android:targetPackage="com.odn.selectorimage.test" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="26.0.0-alpha1" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.odn.selectorimage.view.ImageSelectorActivity"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.odn.selectorimage.view.ImagePreviewActivity"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.odn.selectorimage.view.ImageCropActivity"
            android:theme="@style/AppTheme.Base" />
    </application>

</manifest>