<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>
    <!-- Customize your theme here. -->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/dividerColor</item>
        <item name="android:textColor">@color/dark</item>

    </style>


    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorDarkThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkThemePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/dividerColorDarkTheme</item>


    </style>


    <!--    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="colorPrimary">#000000</item>
            <item name="colorPrimaryDark">#000000</item>
        </style>-->

    <style name="DetailsActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DetailsActivityThemeDark" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorDarkThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkThemePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/dividerColorDarkTheme</item>

    </style>

    <style name="MyButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <!--

        <style name="AppTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="AppTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    -->


    <color name="colorDarkThemePrimary">#042233</color>
    <color name="colorDarkThemePrimaryDark">#031621</color>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  <style name="SplashTheme">
          <item name="android:windowBackground">@drawable/splash_background</item>
      </style>
  -->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Red" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/plus_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Button.Tranparent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/selector_bg_card</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="AppCompat.TranslucentSystemBars" parent="AppTheme">


    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>



</resources>
