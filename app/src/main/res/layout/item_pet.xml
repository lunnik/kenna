<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_image_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="10dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ip_iv_pet"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/ip_txt_name_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ip_txt_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignRight="@+id/card"
        android:layout_below="@+id/card"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-48dp"
        android:background="@drawable/borde_redondo"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_ic"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ip_civ_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignRight="@+id/card"
        android:layout_below="@+id/card"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-48dp"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_ic"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        app:finalHeight="@dimen/image_final_width" />


</RelativeLayout>