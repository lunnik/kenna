<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/ip_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="10dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ip_iv_pet"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/ip_txt_name_pet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/ip_txt_breed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/ip_txt_reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ip_civ_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignRight="@+id/card"
            android:layout_below="@+id/card"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-48dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_ic"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            app:finalHeight="@dimen/image_final_width" />


    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ip_progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_margin="8sp"
        android:adjustViewBounds="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loader_ring.json"
        app:lottie_loop="true" />


</FrameLayout>
