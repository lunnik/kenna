<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="loign"
            type="com.lionsquare.comunidadkenna.activitys.LocationPickerActivity" />
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/alp_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/place_search_dialog_header_image_IV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/place_picker_dialog" />


            <TextView
                android:id="@+id/alp_tv_aviso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_search_dialog_header_image_IV"
                android:layout_margin="16dp"
                android:text="@string/petition_location"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <Button
                    android:id="@+id/alp_btn_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text="@string/empezar"
                    android:textColor="@color/white"
                    android:theme="@style/AppTheme.Button" />

                <Button
                    android:id="@+id/place_search_dialog_cancel_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/place_search_dialog_ok_TV"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text="@string/cancelar"
                    android:theme="@style/Button.Red" />

                <Button
                    android:id="@+id/place_search_dialog_ok_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text="@string/ok"
                    android:textColor="@color/white"
                    android:theme="@style/AppTheme.Button" />


            </RelativeLayout>


        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>