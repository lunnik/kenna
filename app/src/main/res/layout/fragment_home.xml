<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="home_fragment"
            type="com.lionsquare.comunidadkenna.fragments.HomeFragment" />
    </data>

    <RelativeLayout
        android:id="@+id/am_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:visibility="visible"
        tools:context="com.lionsquare.comunidadkenna.fragments.HomeFragment">

        <ImageView
            android:id="@+id/blurred_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/back_menu"
            android:visibility="visible" />


        <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/blurview"
            app:realtimeBlurRadius="5dp"
            app:realtimeOverlayColor="@color/blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/am_btn_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_pet_icon"
                    android:text="Extraviado"
                    android:textColor="@color/dark"
                    android:theme="@style/Button.Tranparent" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/am_iv_lostpet"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/mascota_perdida" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/am_lav_loader"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="loader_ring.json"
                    app:lottie_loop="true"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</layout>

