<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="wall"
            type="com.lionsquare.comunidadkenna.fragments.WallPetFragment"></variable>
    </data>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lionsquare.comunidadkenna.fragments.WallPetFragment">

        <!-- TODO: Update blank fragment layout -->
        <include
            android:id="@+id/include_toolbar"
            layout="@layout/toolbar" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="100dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/aw_rv_pet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v4.widget.SwipeRefreshLayout>


            <com.marcoscg.infoview.InfoView
                android:id="@+id/info_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:iv_buttonText="Try again"
                app:iv_buttonTextColor="@color/colorAccent"
                app:iv_icon="@drawable/ic_sad_emoji"
                app:iv_message="That should not have happened."
                app:iv_title="Oops!" />


        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>


</layout>


