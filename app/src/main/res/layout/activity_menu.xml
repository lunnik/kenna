<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="menu"
            type="com.lionsquare.comunidadkenna.activitys.MenuActivity" />
    </data>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/am_cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lionsquare.comunidadkenna.activitys.MenuActivity">


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/am_rl_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/blurred_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back_menu" />


                <com.github.mmin18.widget.RealtimeBlurView
                    android:id="@+id/blurview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:realtimeBlurRadius="5dp"
                    app:realtimeOverlayColor="@color/blur" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/am_btn_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_user_ic"
                            android:text="@string/perfil"
                            android:textColor="@color/dark"
                            android:theme="@style/Button.Tranparent" />


                        <Button
                            android:id="@+id/am_btn_lost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/ic_pet_icon"
                            android:text="Extraviado"
                            android:textColor="@color/dark"
                            android:theme="@style/Button.Tranparent" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/am_btn_wall"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/ic_wall_pet"
                        android:text="Perdidos"
                        android:textColor="@color/dark"
                        android:theme="@style/Button.Tranparent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/am_iv_lostpet"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/mascota_perdida" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/am_lav_loader"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="loader_ring.json"
                            app:lottie_loop="true" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.lionsquare.comunidadkenna.widgets.behavoir.ScrollingAppBarLayoutBehavior">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:theme="@style/ThemeOverlay.AppCompat" >

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fitsSystemWindows="true"
                app:layout_behavior="com.lionsquare.comunidadkenna.widgets.behavoir.BackdropBottomSheetBehavior" />



            <android.support.v4.widget.NestedScrollView
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:orientation="vertical"
                app:anchorPoint="100dp"
                app:behavior_hideable="true"
                app:behavior_peekHeight="80dp"
                app:layout_behavior="com.lionsquare.comunidadkenna.widgets.behavoir.BottomSheetBehaviorUberLike">

                <include
                    android:id="@+id/ac_include_bottom_sheet_content"
                    layout="@layout/bottom_sheet_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>


    </android.support.design.widget.CoordinatorLayout>


</layout>